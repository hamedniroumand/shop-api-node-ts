{
    "compilerOptions": {
        "module": "commonjs",
        "strict": true,
        "baseUrl": ".",
        "outDir": "dist",
        "esModuleInterop": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "target": "es2018",
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "sourceMap": true,
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./src/public/",
        "node_modules"
    ]
}